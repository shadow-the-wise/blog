<!DOCTYPE html>
<html>

<head>
  <title>my blog | <%= params[:controller].parameterize %>
      <%= params[:action].parameterize %>
  </title>
  <meta name="viewport" content="width=device-width,initial-scale=1">
  <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

      <%= stylesheet_link_tag "application" %>
        <%= javascript_importmap_tags %>
</head>

<!-- Begin Navigation-->
<%= render 'layouts/nav' %>

  <!-- Begin Flash-->
  <%= render 'layouts/flashmessages' %>

    <!-- Begin Body-->

    <body id="<%= params[:controller].parameterize %>">
      <div class="container__<%= params[:controller].parameterize %>_<%= params[:action].parameterize %>">
        <%= yield %>
      </div>
    </body>

</html>
